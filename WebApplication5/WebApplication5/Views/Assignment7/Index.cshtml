@model IEnumerable<WebApplication5.Models.Comment>
<h3>Assignment 7. Partial Comments View with XSS validation check</h3>
<p>
    Implement a partial view that will have form for posting comments allowing HTML tags (Not Script) and should prevent XSS attacks.
    Posted comments should be displayed in the same partial view in list format.
</p>

<p>
    <button class="btn btn-toolbar"> @Html.ActionLink("Create New Record", "Create") </button>
</p>
@*Showing the Cross site scripting  XSS validation check*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw(item.Comments)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>