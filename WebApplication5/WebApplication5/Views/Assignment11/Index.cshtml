@model IEnumerable<WebApplication5.Models.Ass11Emp>

@{
    ViewBag.Title = "Index";
}
@* Displaying the Employees Details Using List *@
<h3 class="text-info">
    Assignment 11. Create duplication email check custom validation attribute with client side validations
</h3>
<h5>Create duplication email check custom validation attribute for Employee email field with client side validations</h5>
<br>
<p>
    <button class="btn btn-toolbar"> @Html.ActionLink("Create New Record", "Create") </button>
</p>
<br>
<table class="table table-bordered">
    <tr class="bg-dark text-white text-center text-success">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HireDate)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="bg-dark text-white">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
